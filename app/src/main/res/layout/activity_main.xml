<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    android:padding="20sp"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/main_icon_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_icon_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome to Book App"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_skip_btn"
        android:layout_marginBottom="10dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"/>
    <Button
        android:id="@+id/main_skip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Continue Without Login"
        android:textColor="@color/purple_500"
        android:background="@drawable/shape_button02"/>

</RelativeLayout>